{
  "manifest_version": 3,
  "name": "X Feed Simulator",
  "version": "0.1.0",
  "description": "Simulate and view another public user's X feed (read-only).",
  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "https://x.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png", 
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": { 
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}